{
    "name": "igor-kozhevnikov/cross",
    "description": "Set of console commands",
    "version": "0.0.1",
    "keywords": ["cross"],
    "homepage": "https://github.com/igor-kozhevnikov/cross",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Kozhevnikov",
            "email": "igor.kozhevkov@proton.me"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/console": "^v6.2",
        "symfony/process": "^v6.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Cross\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cross\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs -p --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
    },
    "bin": ["bin/cross"],
    "minimum-stability": "dev",
    "prefer-stable": true
}
